{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
      "scripthost"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "lodash",
      "luxon",
      "webpack-env",
      "jest"
    ]
  },
  "files": [
    "node_modules/echarts/index.d.ts",
    "node_modules/stackdriver-errors-js/index.d.ts",
    "node_modules/web3modal/dist/index.d.ts",
    "src/types/global.d.ts",
    "src/types/shims-global.d.ts",
    "src/types/shims-vue.d.ts",
    "vue.config.js"
  ],
  "include": [
    "configs/**/*.js",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    ".eslintrc.js",
    "babel.config.js",
    "jest.config.js",
    "stylelint.config.js",
    "vue.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "public",
    "dist"
  ]
}
